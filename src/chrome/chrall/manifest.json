{
	"name": "Chrall",
	"version": "0.12",
	"description": "Une extension Chrome open-source pour Mounty Hall",
	"homepage_url": "http://canop.org/chrall",
	"update_url": "http://canop.org/chrall/updates.xml",
	"background_page": "chrome-extension.html",
	"content_scripts": [
		{
			"matches": ["http://games.mountyhall.com/*"],
			"all_frames" : true,
			"css": [
				"chrall.css",
				"tabs.css",
				"jquery.bubblepopup.v2.3.1.css"
			],
			"js": [
				"jquery.js",
				"jquery.bubblepopup.v2.3.1.min.js",
				"date-fr-FR.js",
				"chrall_sentences.js",
				"chrall_things.js",
				"chrall_general.js",
				"chrall_profile.js",
				"chrall_options.js",
				"chrall_start.js",
				"chrall_view.js",
				"chrall_flies.js",
				"chrall_main.js"
			]
		},
		{
			"matches": ["http://canop.org/chrall/*", "http://www.canop.org/chrall/*"],
			"js": [
				"jquery.js",
				"chrall_detect.js"
			]
		}
	]
}
